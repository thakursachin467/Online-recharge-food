<h1 class="text-center">Review Your Order</h1>
<div class="row">
  <div class="col-md-12">
    <table  class="table tablelast table-hover center table-condensed">
        				<thead>
    						<tr>
    							<th style="width:50%">Product</th>
    							<th style="width:14%">Price</th>
    							<th style="width:3%">Quantity</th>
    							<th style="width:10%" class="text-center">Subtotal</th>
    						</tr>
    					</thead>
    {{#each sessions.cart}}
    					<tbody>
    						<tr>
    							<td data-th="Product">
    								<div class="row">

    									<div class="col-sm-10">
    										<h4 class="nomargin">{{items.itemName}}</h4>
                        <p>{{items.description}}</p>
    									</div>
    								</div>
    							</td>
    							<td data-th="Price">&#8377; {{items.itemPrice}}</td>
    							<td data-th="Quantity">
    								<input type="number" class="form-control text-center" value="{{quantity}}" disabled>
    							</td>
    							<td data-th="Subtotal" class="text-center">&#8377; {{totalPrice}}</td>
    						</tr>
    					</tbody>
              {{/each}}
    					<tfoot>
    						<tr>
    							<td><a href="/cart" class="btn btn-warning"><i class="fa fa-angle-left"></i> Back</a></td>
    							<td colspan="2" class="hidden-xs"></td>
                  <td>
                  <form action="/checkout" method="POST">
  <!-- Note that the amount is in paise = 50 INR -->
  <script src="https://checkout.razorpay.com/v1/checkout.js" data-key="{{key}}" data-amount="{{totalpay sessions.cart}}" data-buttontext="Pay with Razorpay" data-name="FOOD" data-description="FOOD" data-image="https://your-awesome-site.com/your_logo.jpg"
    data-prefill.name="{{userid.name}}" data-prefill.email="{{userid.email}}" data-theme.color="#F37254">
    //
    //
  </script>
  <script>
    document.getElementsByClassName('razorpay-payment-button')[0].style.display = 'none';
  </script>
  <input type="hidden" value="Hidden Element" name="hidden">
    <input type="hidden" value="{{totalpay sessions.cart}}" name="amount">
  <button type="submit" class="btn btn-lg btn-block btn-success"  href="#">Pay &#8377;{{total sessions.cart}} <i class="fa fa-angle-right"></i></button>
</form>
</td>
    						</tr>
    					</tfoot>
    				</table>

  </div>


</div>
