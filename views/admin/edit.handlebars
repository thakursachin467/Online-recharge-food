<h1 class="text-center">Edit Item</h1>
<div class="row">
  <div class="col-md-12">
    <div class="col-md-6 d-block mx-auto">
<form  action="/item/edit/{{data._id}}?_method=PUT" method="post">
  <input type="hidden" name="_method" value="PUT">
<div class="form-group">
  <label>Item Name</label>
  <input type="text" name="itemname" class="form-control" value="{{data.itemName}}" required>
</div>
<div class="form-group">
  <label>Description</label>
  <textarea name="editor1"  name="description" class="form-control" required>{{data.description}}</textarea>
</div>
<div class="checkbox">
  <label>
    <input name="avalability" type="checkbox" {{#if data.ItemAvailable}} checked {{else}}  {{/if}}> Available
  </label>

</div>
<div class="form-group">
  <label>Price</label>
  <input type="text" name="itemprice" class="form-control" value="{{data.itemPrice}}" required>
</div>
<div class="form-group">
  <label>Provider(TQ etc)</label>
  <input type="text"  name="Itemprovider" class="form-control" value="{{data.ItemProvider}}" required>
</div>
<div class="form-group no-margin">
  <button type="submit" class="btn btn-primary btn-block">
    save changes
  </button>
</div>
 </form>
 </div>
 </div>
 </div>
